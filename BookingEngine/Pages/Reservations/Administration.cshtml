@page
@model BookingEngine.Pages.Reservations.AdministrationModel

@{
    ViewData["Title"] = "Administration";
}

<h5>Administration</h5>

<p >
    <a asp-page="Create" class="btn btn-success" style="float:right">New Reservation</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].CheckIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].CheckOut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].NumberOfAdults)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].Room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].Guest)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Reservation) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CheckIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckOut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfAdults)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.RoomID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guest.GuestId)
            </td>
            <td>
                <a asp-page="./GuestDetails" asp-route-id="@item.ID">Edit</a> 
              
            </td>
        </tr>
}
    </tbody>
</table>
