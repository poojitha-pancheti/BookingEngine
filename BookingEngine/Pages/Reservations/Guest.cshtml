@page
@model BookingEngine.Pages.Reservations.GuestModel

@{
    ViewData["Title"] = "Guest";
}

<h1 style="color:cornflowerblue">Please provide Guest and Payment Info to complete booking!</h1>
<hr />
<div style="float:left;width:80%">
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group float-left" style="width:40%">
                    <label asp-for="Guest.FirstName" class="control-label" style="color:dodgerblue"></label>
                    <input asp-for="Guest.FirstName" class="form-control" />
                    <span asp-validation-for="Guest.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group float-right" style="width:50%">
                    <label asp-for="Guest.LastName" class="control-label" style="color:dodgerblue"></label>
                    <input asp-for="Guest.LastName" class="form-control" />
                    <span asp-validation-for="Guest.LastName" class="text-danger"></span>
                </div>
                <div class="form-group float-left" style="width:40%">
                    <label asp-for="Guest.EmailAddress" class="control-label" style="color:dodgerblue"></label>
                    <input asp-for="Guest.EmailAddress" class="form-control" />
                    <span asp-validation-for="Guest.EmailAddress" class="text-danger"></span>
                </div>
                <div class="form-group float-right" style="width:50%">
                    <label asp-for="Guest.PhoneNumber" class="control-label" style="color:dodgerblue"></label>
                    <input asp-for="Guest.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Guest.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Guest.HomeAddress" class="control-label" style="color:dodgerblue"></label>
                    <input asp-for="Guest.HomeAddress" class="form-control" />
                    <span asp-validation-for="Guest.HomeAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Guest.City" class="control-label" style="color:dodgerblue"></label>
                    <input asp-for="Guest.City" class="form-control" />
                    <span asp-validation-for="Guest.City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Guest.ZipCode" class="control-label" style="color:dodgerblue"></label>
                    <input asp-for="Guest.ZipCode" class="form-control" />
                    <span asp-validation-for="Guest.ZipCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Guest.CreditCardNumber" class="control-label" style="color:dodgerblue"></label>
                    <input asp-for="Guest.CreditCardNumber" class="form-control" />
                    <span asp-validation-for="Guest.CreditCardNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Guest.FullNameOnCard" class="control-label" style="color:dodgerblue"></label>
                    <input asp-for="Guest.FullNameOnCard" class="form-control" />
                    <span asp-validation-for="Guest.FullNameOnCard" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Guest.ExpiryDate" class="control-label" style="color:dodgerblue"></label>
                    <input asp-for="Guest.ExpiryDate" class="form-control" />
                    <span asp-validation-for="Guest.ExpiryDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Guest.CVV" class="control-label" style="color:dodgerblue"></label>
                    <input asp-for="Guest.CVV" class="form-control" />
                    <span asp-validation-for="Guest.CVV" class="text-danger"></span>
                </div>

                <div class="form-check-inline">
                    <input type="checkbox" id="Billing" name="Billing" value="Billing">
                    <label for="Billing" style="color:dodgerblue"> Use Mailing Address as Billing Address</label><br>
                </div>
            </form>
        </div>
    </div>
    <div>
        <h4 style="color:cornflowerblue">Deposit: Total Room Charges Mansion Buyout</h4>
        <br />
        <h6>
            This rate plan requires 100% of room charges at time of booking.
            Taxes and service charges collected at check-out.
        </h6>
    </div>
    <div>
        <h4 style="color:cornflowerblue">No Show Policy</h4>
        <br />
        <h6>100% of Total Charges (including taxes and service charges and marketing fees are collected)</h6>
    </div>
    <div>
        <h4 style="color:cornflowerblue">Check In Policy</h4>
        <br />
        <h6>
            Check in is between 3 PM and 7 PM.
            Check in outside of these times must be arranged in advance.
            Your credit card will be authorized 150% of your balance on check-in for remaining charges plus any incidentals
        </h6>
    </div>
    <div>
        <h4 style="color:cornflowerblue">NonCancelable Reservation-Mansion + Best Available</h4>
        <br />
        <h6>
            This rate plan does not permit cancellations for any reason.
            There will be no refund of deposits paid.
            We recommend trip insurance or selecting another rate plan if you require more flexibility.
        </h6>
    </div>
</div>
<div style="float:right;width:20%">
    <img src="~/Images/Mansion.jpg" height="300" width="300" />
    <br />
    <div class="form-check-inline">
        <input type="checkbox" id="checkbox" name="checkbox" style="color:royalblue" />
        <label for="checkbox" style="color:royalblue">I have reviewed and agreed to the trip summary and policies, as well as any charges that may occur.</label>
    </div>
    <div class="form-group">
        <input type="submit" value="Book Stay" class="btn btn-primary" />
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
